#:kivy 2.0.0

<Button>:
    background_normal: ''
    background_color: (2/255, 10/255, 24/255, 1)
    size_hint: (.2, .2)

<CalWidget>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input
            text: "0"
            font_size: 43
            multiline: False
            halign: "right"
            size_hint: (1, 0.19)
            background_color: (223/255, 233/255, 230/255, 1)
            foreground_color: 1, 1, 1, 1
   
        GridLayout:
            cols: 4
            rows: 5

            Button:
                text:"%"
                font_size:32
                on_press: root.signs("%")
            
            Button:
                text:"C"
                font_size:32
                on_press: root.clear()
        
            Button:
                text: U"\u00AB"
                font_size:32
                on_press: root.back()
            
            Button:
                text:"/"
                font_size:32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("/")
            
            Button:
                text:"7"
                font_size:32
                on_press: root.pressed(7)
            
            Button:
                text:"8"
                font_size:32
                on_press: root.pressed(8)
        
            Button:
                text:"9"
                font_size:32
                on_press: root.pressed(9)
            
            Button:
                text:"x"
                font_size:32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("*")
            
            Button:
                text:"4"
                font_size:32
                on_press: root.pressed(4)
            
            Button:
                text:"5"
                font_size:32
                on_press: root.pressed(5)
        
            Button:
                text:"6"
                font_size:32
                on_press: root.pressed(6)
            
            Button:
                text:"-"
                font_size:32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("-")
            
            Button:
                text:"1"
                font_size:32
                on_press: root.pressed(1)
            
            Button:
                text:"2"
                font_size:32
                on_press: root.pressed(2)
        
            Button:
                text:"3"
                font_size:32
                on_press: root.pressed(3)
            
            Button:
                text:"+"
                font_size:32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.signs("+")
            
            Button:
                text:"+/-"
                font_size:32
                on_press: root.positive_negative()
            
            Button:
                text:"0"
                font_size:32
                on_press: root.pressed(0)
        
            Button:
                text:"."
                font_size:32
                on_press: root.dot()
            
            Button:
                text:"="
                font_size:32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.result()
            
            




